# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index
GET     /purchases                  controllers.Application.purchases(username: Option[String])
GET     /groupinfo                  controllers.Application.groupInfo(id: Int ?= 0)
GET     /login                      controllers.Application.getLoginPage
GET     /logout                     controllers.Application.logout
GET     /signup                     controllers.Application.getSignupPage
GET     /getGroupPieData            controllers.Application.getGroupPieData(groupID: Int)

POST    /login                      controllers.Application.login
POST    /signup                      controllers.Application.signup
POST    /save                       controllers.Application.savePurchase
POST    /saveJSON                   controllers.Application.savePurchaseJSON
# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
